        <input id="vlan" placeholder="VLAN" style="margin-top: 2%; width: 187px;"/>
        <textarea id="note" placeholder="Note" style="margin-top: 2%; width: 187px;"></textarea>
        <input id="assetForPort" placeholder="Udstyr" style="margin-top: 2%; width: 187px;" />
        
