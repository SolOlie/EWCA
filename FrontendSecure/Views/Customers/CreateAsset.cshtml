            <a class="btn btn-default" id="addPortsToListBtn">
                <span class="glyphicon glyphicon-arrow-right"></span>
            </a>
        </div>
        
        <div style="margin-top: 5%; margin-left: 42%; height: 50px; width: 100px; padding-top: 2%; padding-left: 2%;">
            <a class="btn btn-success" onclick="showPopup()" id="addPortsYesBtn">
                <span class="glyphicon glyphicon-ok"></span>
            </a>
        </div>
    </div>
    <div>
       
        @Html.Partial("PortListPartialView",new List<Port>())
    </div>
</div>
<div>
    @Html.ActionLink("Tilbage", "Details", "Customers", new { id = Model.customerId }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
    $(document)
        .ready(function () {
            $("#select").val(1);
            $(function () {
                $('Select').change(function () {
                    if (this.value == 1) {
                        $('#addPortBtn').show();
                    } else {
                        $('#addPortBtn').hide();
                    }
                });
            });
            $("#select").removeAttr("required");

        });
    $("#select")
        .on('change',
            function () {
                     $("#assetTypeInput").val("");
                    $("#assetTypeInput").prop("disabled", true);
                    $("#clearInput").show();


            });

    $("#clearInput")
        .on('click', function () {
                $("#select").val(0);
                $("#select").prop("disabled", true);
                $(this).hide().prev("input[disabled]").prop("disabled", false).focus();
                $("#clearDropdown").show();
                $('#addPortBtn').hide();

        });
    $("#clearDropdown")
        .click(function () {
            $("#assetTypeInput").val("");
            $(this).hide().prev("select[disabled]").prop("disabled", false).focus();

            $("#clearInput").show();
        });
    function showPopup() {
        $("#PopupForAddPort")
            .toggle('fast',function() {

            });
    }
    $('#addPortsToListBtn').click(function (event) {
           $.ajax({
               url: '@Url.Action("AddToPortListAjax","Customers")',
               data: { portnumber: $("#portNumber").val(), VLAN: $("#vlan").val(), trunk: $("#trunk").val(), asset: $("#assetForPort").val(), note: $("#note").val() },
               success: function (data) {
                   $('#Table').load("/Customers/RenderPortPartial");
               }
           });
       }
   );
    $(document)
        .ready(function () {
            var date = new Date(parseInt(@(Model.Asset.InstallationDate.Year)),
                  parseInt(@(Model.Asset.InstallationDate.Month)-1),
                  parseInt(@(Model.Asset.InstallationDate.Day)+1));
            document.getElementById("dateTimeField1").valueAsDate = date;
        });
</script>

