@model IEnumerable<Entities.Entities.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section styles{
    <link href="~/Content/CustomerIndexStyles.css" rel="stylesheet" />
}
<div id="customerIndex">
    <a id="addBtn" class="btn btn-default" href="@Url.Action("Create","Customers")" onclick="showPageLoadingSpinner()">
        <span class="glyphicon glyphicon-plus"
              aria-hidden="true"></span>
    </a>

    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Firm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.ActionLink(item.Firm, "Details", new {id = item.Id})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a class="btn btn-default" href="@Url.Action("Edit", "Customers", new {id = item.Id})" onclick="showPageLoadingSpinner()">
                        <span class="glyphicon glyphicon-pencil"
                              aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Delete", "Customers", new {id = item.Id})" class="btn btn-danger">
                        <span class="glyphicon glyphicon-trash"
                              aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
    }

    </table>
</div>
